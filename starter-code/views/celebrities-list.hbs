<h1>Celebrities & Movies</h1>
<br>

<div class="container">

  <div class="row">

    <div class="col">
      <h3>Celebrities</h3>
      {{#each celebs}}
      <div>
        <h5><a href="/celebrities/{{_id}}">{{name}}</a></h5>
        <br>
        <form action="/celebrities/{{_id}}/delete" method="POST">
          <button class="btn btn-danger btn-sm">Delete</button>
        </form>
        <hr>
      </div>
      <br>
      {{/each}}
      <a class="btn btn-primary btn-sm" href="/celebrities/add">Add your celebrity</a>
    </div>

    <div class="col">
      <h3>Movies</h3>
      {{#each movies}}
      <div>
        <h5><a href="/movies/{{_id}}">{{title}}</a></h5>
        <br>
        <form action="/celebrities/{{_id}}/movie-delete" method="POST">
          <button class="btn btn-danger btn-sm">Delete</button>
        </form>
        <hr>
      </div>
      <br>
      {{/each}}
      <a class="btn btn-primary btn-sm" href="/movies/add">Add your movie</a>
    </div>

  </div>

</div>
<br>

<br>
<a class="btn btn-primary btn-sm" href="/">Back</a>